<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".Vendor_add_product_form"
    android:background="#C7B6F6C3">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="20dp"
        app:cardElevation="30dp"
        app:cardCornerRadius="20dp"

        app:cardBackgroundColor="#4EF0F8"
        android:outlineAmbientShadowColor="#E3C71A"
        android:outlineSpotShadowColor="#22F314"


        android:layout_margin="20dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="10dp"
        android:background="#C7F5F6">
    <ImageView
        android:layout_margin="10dp"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:id="@+id/add_product_image"
        android:src="@drawable/car1"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <EditText
            android:id="@+id/form_name_of_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter name of the product"
            android:textColorHint="#66B15B"
            android:textColor="#D510EF"
            android:layout_margin="10dp"/>
        <EditText
            android:id="@+id/form_categ_of_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Product Price"
            android:textColorHint="#66B15B"
            android:textColor="#D510EF"
            android:layout_margin="10dp"/>
        <EditText
            android:id="@+id/form_brand_of_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Product Brand"
            android:textColorHint="#66B15B"
            android:textColor="#D510EF"
            android:layout_margin="10dp"/>
        <EditText
            android:id="@+id/form_discount_of_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Discount"
            android:textColorHint="#66B15B"
            android:textColor="#D510EF"
            android:layout_margin="10dp"/>
        <Button
            android:id="@+id/btn_add_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:text="Add Product"
            android:textColor="#3D2D85"
            android:textSize="25sp"
            android:background="#55D341"/>

    </LinearLayout>
    </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>